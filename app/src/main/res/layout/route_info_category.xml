<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/indent_16"
    android:paddingEnd="@dimen/indent_16"
    android:paddingStart="@dimen/indent_16">

    <TextView
        android:id="@+id/route_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/font_18"
        tools:text="Параметры"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/route_info_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent_8"
        android:layout_marginStart="@dimen/indent_16"
        app:layout_constraintTop_toBottomOf="@id/route_info_title"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>