<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/horizontal_progress_title"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Идет обработка..."/>

    <ProgressBar
        android:id="@+id/horizontal_progress"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="?android:attr/progressBarStyleHorizontal"
        android:indeterminate="false"
        android:max="100"/>

    <TextView
        android:id="@+id/horizontal_progress_description"
        app:layout_constraintTop_toBottomOf="@id/horizontal_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="60%"/>

</androidx.constraintlayout.widget.ConstraintLayout>